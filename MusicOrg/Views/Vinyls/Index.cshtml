@{
    Layout = "_Layout";
}

@using MusicOrg.Models;
@model List<MusicOrg.Models.Vinyl>;


<h1 class="capital-text">Vinyls In Your Collection</h1>


@if (@Model.Count == 0)
{
    <h3>No vinyls have been added</h3>
}
<hr>
<div class="list-items">
    @foreach(Vinyl vinyl in Model)
    {
        @Html.ActionLink($"{vinyl.Title}", "Details", new { id = vinyl.VinylId})<br>
    }
</div>
<hr>
<p>@Html.ActionLink("Create new vinyl", "Create")</p>
<p>@Html.ActionLink("Back to home page", "Index", "Home")</p>