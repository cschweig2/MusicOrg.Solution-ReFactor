@{
    Layout = "_Layout";
}

@using MusicOrg.Models;
@model List<MusicOrg.Models.Artist>;

<h1>Artists In Your Collection</h1>

@if (@Model.Count == 0)
{
    <h3>No artists have been added</h3>
}

<ul>
@foreach(Artist artist in Model)
{
    <li>@Html.ActionLink($"{artist.Name}", "Details", new { id = artist.ArtistId })</li>
}
</ul>

<p>@Html.ActionLink("Add new artist", "Create")</p>
<p>@Html.ActionLink("Back to home page", "Index", "Home")</p>